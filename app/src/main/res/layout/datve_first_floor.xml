<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:background="#EDF5FA">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedangchon"
                android:layout_column="2"/>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="C"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFE70909"
                android:layout_column="1"
                android:gravity="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="B"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFE70909"
                android:layout_column="3"
                android:gravity="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="A"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#FFE70909"
                android:layout_column="5"
                android:gravity="center"/>

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >

            <ImageView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="1"
                android:id="@+id/C1D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedangchon1"
                android:layout_column="3"
                android:id="@+id/B1D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong1"
                android:layout_column="5"
                android:id="@+id/A1D" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon2"
                android:layout_column="1"
                android:id="@+id/C2D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong2"
                android:layout_column="3"
                android:id="@+id/B2D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong2"
                android:layout_column="5"
                android:id="@+id/A2D" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ghedachon3"
            android:layout_column="1"
                android:id="@+id/C3D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong3"
                android:layout_column="3"
                android:id="@+id/B3D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong3"
                android:layout_column="5"
                android:id="@+id/A3D" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedangchon4"
                android:layout_column="1"
                android:id="@+id/C4D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong4"
                android:layout_column="3"
                android:id="@+id/B4D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghetrong4"
                android:layout_column="5"
                android:id="@+id/A4D" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon5"
                android:layout_column="1"
                android:id="@+id/C5D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="3"
                android:id="@+id/B5D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="5"
                android:id="@+id/A5D" />

        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="D"
                android:textColor="#FFE70909"
                android:layout_column="0" />

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="1"
                android:id="@+id/D1D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="2"
                android:id="@+id/D2D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="3"
                android:id="@+id/D3D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="4"
                android:id="@+id/D4D" />
            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ghedachon1"
                android:layout_column="5"
                android:id="@+id/D5D" />

        </TableRow>

    </TableLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Ghế"/>

    </LinearLayout>



</LinearLayout>
