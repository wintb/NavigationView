    <RelativeLayout
        android:layout_marginTop="50dp"
        android:id="@+id/layout_Title_VeMotChieu"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colormain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐẶT VÉ MỘT CHIỀU"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_txtChuyenDiMotChieu"
        android:layout_below="@+id/layout_Title_VeMotChieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/txtChuyenDi"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:hint="Chọn Chuyến đi"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="@drawable/rect"/>

        <ImageButton
            android:id="@+id/imgChuyenDi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/transport1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ChonChuyenDi"
        android:layout_below="@+id/layout_txtChuyenDiMotChieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textSize="20dp"
                    android:background="@drawable/rect"/>

                <ImageButton
                    android:id="@+id/imgDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/date1"
                    />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!--<Button
