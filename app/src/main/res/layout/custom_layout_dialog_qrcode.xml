<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:padding="@dimen/distance_small"
        android:textSize="20sp"
        android:textColor="#2c3e50"
        android:text="Mã xác nhận khi thanh toán vé"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingBottom="@dimen/distance_large"
        android:textColor="#2c3e50"
        android:text="Mã này được lưu trong thư mục ảnh Gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imgQrCode"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/QRcode_btnOK"
        android:text="OK"
        android:textAllCaps="false"
        android:layout_marginTop="@dimen/distance_large"
        android:background="@drawable/rect_layout"
        android:layout_width="100dp"
        android:layout_height="35dp" />


</LinearLayout>
