<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fragment_huongdan_bacground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" />

        <LinearLayout
            android:id="@+id/fragment_huongdan_layoutContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_huongdan_icon"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/fragment_huongdan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_huongdan_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/distance_normal"
                android:gravity="center"
                android:text="Scan Qr-Code on your table \n to get menu list "
                android:textColor="#fff"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
