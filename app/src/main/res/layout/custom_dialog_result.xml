<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">


    <ImageView
        android:id="@+id/VeVuaDat_imgStatus"
        android:src="@drawable/warning"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/txtMessage"
        android:textSize="20sp"
        android:textColor="#2c3e50"
        android:text="Vui lòng kiểm tra và thử lại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/distance_small"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:layout_marginBottom="30dp"
            android:id="@+id/btnOK"
            android:text="OK"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/distance_large"
            android:background="@drawable/rect_button_dialog"
            android:layout_width="100dp"
            android:layout_height="35dp" />

    </LinearLayout>


</LinearLayout>
