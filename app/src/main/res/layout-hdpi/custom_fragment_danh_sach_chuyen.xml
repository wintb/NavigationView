<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="7"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_height="wrap_content"
    android:id="@+id/layout_custom_danhsachchuyen"
    android:background="@drawable/rounded_item_list_trip">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text="Mã Tài"
            android:id="@+id/txtTai"
            android:layout_weight="1"
            />

        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Giờ Đi"
            android:id="@+id/txtGioDi"
            android:layout_weight="1"
            />

        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Giờ Đến"
            android:id="@+id/txtGioDen"
            android:layout_weight="1" />

        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Giá Vé"
            android:id="@+id/txtGiaVe"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/txtChon"
            android:src="@drawable/right_arrow"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

    </TableRow>

</LinearLayout>
